{
    "manifest_version": 3,
    "name": "CDEK ek5 mod",
    "description": "Улучшения для CDEK ЭК5",
    "version": "0.1",
    "author": "СДЭК на Кирова 7",
    "action": {
        "default_popup": "index.html",
        "default_title": "ЭК5 Мод"
    },
    "content_scripts": [
        {
            "js": [
                "content-script.js"
            ],
            "matches": [
                "https://ek5.cdek.ru/*"
            ],
            "all_frames": true
        }, {
            "js": [
                "addressStorage.js"
            ],
            "matches": [
                "https://addressstorageng.cdek.ru/*"
            ],
            "all_frames": true
        }, {
            "js": [
                "complexReceipt.js"
            ],
            "matches": [
                "https://warehouseng.cdek.ru/*"
            ],
            "all_frames": true
        }, {
            "js": [
                "order.js"
            ],
            "css" : [
                "order.css"
            ],
            "matches": [
                "https://orderec5ng.cdek.ru/*"
            ],
            "all_frames": true
        }
    ]
}